<%- include('partials/header.ejs'); -%>

<div class="container outline">
  <% if (locals.data) {  %>
    <% data.forEach((book) => { %>
      <div class="book-card">
        <div class="card-body">
          <p class="text-grey card-rating" style="justify-self: flex-start">Rating: <%= book.rating %>/10</p>
          <p class="text-grey card-read">Read: <%= book.date_started.getMonth() %>/<%= book.date_started.getFullYear() %>-<%= book.date_finished.getMonth() %>/<%= book.date_finished.getFullYear() %></p>
          <div class="card-buttons card-buttons-container">
            <btn>🖊️</btn>
            <btn>🗑️</btn>
          </div>
          <div class="card-title-author">
            <p class="text-black mb-0"><strong><%= book.book_title %></strong></p>
            <p class="text-black"><em><%= book.book_author %></em></p>
          </div>
          <p class="text-black mb-0 card-note"><%= book.summary %></p>
          <img class="card-cover" src="<%= book.book_cover %>" alt="book cover">
          <p class="text-grey mb-0 card-isbn"><%= book.book_isbn %></p>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p>error</p>
  <% } %>
</div>

<%- include('partials/footer.ejs'); -%>
