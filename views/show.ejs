<%- include('partials/header.ejs'); -%>

<div class="container outline">
  <% if (locals.data) {  %>
    <div class="book-card">
      <div class="card-top">
        <p class="text-grey" style="justify-self: flex-start">Rating: <%= data.rating %>/10</p>
        <p class="text-grey">Read: <%= data.date_started.getMonth() %>/<%= data.date_started.getFullYear() %>-<%= data.date_finished.getMonth() %>/<%= data.date_finished.getFullYear() %></p>
        <div class="card-buttons-container">
          <btn>🖊️</btn>
          <btn>🗑️</btn>
        </div>
      </div>
      <p class="text-black mb-0"><strong><%= data.book_title %></strong></p>
      <p class="text-black mb-0"><em><%= data.book_author %></em></p>
      <p class="text-black"><%= data.summary %></p>
      <p class="text-black"><%= data.note %></p>
      <img src="https://d827xgdhgqbnd.cloudfront.net/wp-content/uploads/2016/04/09121712/book-cover-placeholder.png" alt="book cover" width="100" height="150">
      <%#= data.book_cover %>
      <p class="text-grey"><%= data.book_isbn %></p>
    </div>
  <% } else { %>
    <p>error</p>
  <% } %>
</div>

<%- include('partials/footer.ejs'); -%>
